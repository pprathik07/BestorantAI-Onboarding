---
interface Props {
  quote: string;
  name: string;
  role: string;
  restaurant: string;
}

const { quote, name, role, restaurant } = Astro.props;
const initials = name.split(' ').map(n => n[0]).join('');
---

<div class="testimonial-inline">
  <div class="w-11 h-11 rounded-full bg-gradient-to-br from-green-400 to-emerald-600 flex items-center justify-center flex-shrink-0">
    <span class="text-white font-bold text-sm">{initials}</span>
  </div>
  <div>
    <p class="text-sm mb-1.5">
      <a href="#" class="text-green-600 font-semibold hover:underline">{name}</a><span class="text-gray-500">, {role} at {restaurant}</span>
    </p>
    <p class="text-sm text-gray-600 leading-relaxed">"{quote}"</p>
  </div>
</div>
