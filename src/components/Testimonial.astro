---
interface Props {
  quote: string;
  name: string;
  role: string;
  restaurant: string;
}

const { quote, name, role, restaurant } = Astro.props;
const initials = name.split(' ').map(n => n[0]).join('');
---

<div class="themed-testimonial-card rounded-2xl p-6 lg:p-8 transition-colors duration-300">
  <div class="flex items-start gap-4">
    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center flex-shrink-0">
      <span class="text-white font-bold text-sm">{initials}</span>
    </div>
    <div>
      <p class="themed-testimonial-name font-semibold text-sm transition-colors">{name}, <span class="themed-testimonial-role font-normal transition-colors">{role} at {restaurant}</span></p>
      <p class="themed-testimonial-quote text-sm italic leading-relaxed mt-2 transition-colors">"{quote}"</p>
    </div>
  </div>
</div>
