---
import DemoLayout from '../layouts/DemoLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import TrustBadges from '../components/TrustBadges.astro';
import Testimonial from '../components/Testimonial.astro';
import DemoForm from '../components/DemoForm';
---

<DemoLayout
  title="See the #1 Rated Restaurant Marketing Platform | BestorantAI"
  description="Get more traffic, more sales, and more repeat customers. See why hundreds of restaurants trust BestorantAI."
  variant="1"
>
  <Navbar />

  <!-- Hero: Compact with CTA button (no inline form) -->
  <section class="pt-24 pb-12 lg:pt-28 lg:pb-14 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl">
        <h1 class="text-4xl sm:text-5xl font-extrabold font-heading text-gray-900 leading-tight tracking-tight mb-5 text-balance">
          See the #1 rated restaurant marketing platform in action
        </h1>

        <p class="text-base text-gray-500 mb-6 max-w-lg leading-relaxed">
          Get more traffic, more sales, and more repeat customers. See why hundreds of restaurants trust BestorantAI.
        </p>

        <!-- Star Rating -->
        <div class="flex items-center gap-2 mb-8">
          <div class="flex">
            {[1,2,3,4,5].map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            ))}
          </div>
          <span class="text-sm text-gray-500">Rated 4.8 stars across 200+ reviews</span>
        </div>

        <a href="#demo-form" class="btn-cta">
          Get a free demo
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path d="M9 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- On Your 20-Minute Demo â€” Feature Cards -->
  <section class="py-12 bg-white border-t border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-base font-semibold text-gray-900 mb-6">On your 20 minute demo, we'll cover</h2>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <!-- Card 1 -->
        <div class="feature-card">
          <div class="feature-card-icon bg-blue-50">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="font-bold text-gray-900 text-sm mb-1">AI websites + SEO</h3>
          <p class="text-sm text-gray-500">To drive more customers from Google.</p>
        </div>

        <!-- Card 2 -->
        <div class="feature-card">
          <div class="feature-card-icon bg-purple-50">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5m.75-9l3-3 2.148 2.148A12.061 12.061 0 0116.5 7.605" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="font-bold text-gray-900 text-sm mb-1">Marketing automations</h3>
          <p class="text-sm text-gray-500">To maximize sales from existing customers.</p>
        </div>

        <!-- Card 3 -->
        <div class="feature-card">
          <div class="feature-card-icon bg-green-50">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="font-bold text-gray-900 text-sm mb-1">Mobile app builder</h3>
          <p class="text-sm text-gray-500">To deliver the best ordering experience to regulars.</p>
        </div>

        <!-- Card 4 -->
        <div class="feature-card">
          <div class="feature-card-icon bg-orange-50">
            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M13.5 16.875h3.375m0 0h3.375m-3.375 0V13.5m0 3.375v3.375M6 10.5h2.25a2.25 2.25 0 002.25-2.25V6a2.25 2.25 0 00-2.25-2.25H6A2.25 2.25 0 003.75 6v2.25A2.25 2.25 0 006 10.5zm0 9.75h2.25A2.25 2.25 0 0010.5 18v-2.25a2.25 2.25 0 00-2.25-2.25H6a2.25 2.25 0 00-2.25 2.25V18A2.25 2.25 0 006 20.25zm9.75-9.75H18a2.25 2.25 0 002.25-2.25V6A2.25 2.25 0 0018 3.75h-2.25A2.25 2.25 0 0013.5 6v2.25a2.25 2.25 0 002.25 2.25z" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="font-bold text-gray-900 text-sm mb-1">And more</h3>
          <p class="text-sm text-gray-500">Integrations, commission-free delivery, and real examples with before/after numbers.</p>
        </div>
      </div>

      <!-- Badges + Testimonial -->
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 items-start">
        <div class="lg:col-span-2">
          <TrustBadges />
        </div>
        <div class="lg:col-span-3">
          <Testimonial
            quote="BestorantAI makes online marketing so easy. They're the secret to our online success."
            name="Yuliana Vasquez"
            role="Owner"
            restaurant="Samos Oaxaca"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Full-Width Form Section -->
  <section class="py-16 bg-gray-50 border-t border-gray-100">
    <div class="max-w-xl mx-auto px-4 sm:px-6">
      <DemoForm client:load />
    </div>
  </section>

  <Footer />
</DemoLayout>
