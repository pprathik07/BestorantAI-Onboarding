---
import DemoLayout from '../layouts/DemoLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import TrustBadges from '../components/TrustBadges.astro';
import Testimonial from '../components/Testimonial.astro';
import DemoForm from '../components/DemoForm';
---

<DemoLayout
  title="Stop Wasting Money on Ads That Don't Work | BestorantAI"
  description="AI-powered ad automation that runs Meta & Uber campaigns while you focus on your restaurant. Join 500+ restaurants already growing with BestorantAI."
  variant="1"
>
  <Navbar />

  <!-- Hero Section — Pain Point Amplification -->
  <section class="pt-24 pb-16 lg:pt-32 lg:pb-20 themed-section relative overflow-hidden transition-colors duration-300">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-20 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-1/4 w-80 h-80 bg-secondary/8 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 items-start">
        <!-- Left content -->
        <div class="lg:col-span-3">
          <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-primary/10 border border-primary/20 text-primary-light text-sm font-medium mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            Rated #1 Restaurant Marketing Platform
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold font-heading leading-tight tracking-tight mb-6 themed-h1 transition-colors duration-300">
            Stop Wasting
            <span class="gradient-text"> $500/Month </span>
            on Ads That Don't Work
          </h1>

          <p class="text-lg themed-text max-w-xl leading-relaxed mb-8 transition-colors duration-300">
            AI-powered ad automation that runs Meta & Uber campaigns while you focus on your restaurant.
          </p>

          <!-- Pain Points -->
          <div class="space-y-4 mb-8">
            <div class="flex items-start gap-3">
              <div class="pain-icon pain-icon-danger">
                <svg class="w-3.5 h-3.5 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path d="M6 18L18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <p class="themed-text transition-colors">Ads running with <strong class="themed-text-strong transition-colors">no targeting strategy</strong> — burning budget on the wrong audience</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="pain-icon pain-icon-danger">
                <svg class="w-3.5 h-3.5 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path d="M6 18L18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <p class="themed-text transition-colors"><strong class="themed-text-strong transition-colors">No time to manage</strong> social media daily alongside running a restaurant</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="pain-icon pain-icon-danger">
                <svg class="w-3.5 h-3.5 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path d="M6 18L18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <p class="themed-text transition-colors">Can't track which campaigns <strong class="themed-text-strong transition-colors">actually bring customers</strong> through the door</p>
            </div>
          </div>

          <!-- Solution callout -->
          <div class="themed-card rounded-xl p-5 mb-8 border-l-4 border-accent transition-colors duration-300">
            <div class="flex items-start gap-3">
              <div class="pain-icon pain-icon-success">
                <svg class="w-3.5 h-3.5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <p class="themed-text transition-colors">Our AI handles everything: <strong class="themed-text-strong transition-colors">targeting, creatives, scheduling, and optimization</strong> — automatically.</p>
            </div>
          </div>

          <a href="#demo-form" class="lg:hidden inline-block px-8 py-4 rounded-xl bg-gradient-to-r from-primary to-secondary text-white font-bold text-base shadow-2xl shadow-primary/30 hover:-translate-y-1 transition-transform">
            See How It Works →
          </a>
        </div>

        <!-- Sticky sidebar form -->
        <div class="lg:col-span-2 lg:sticky lg:top-24">
          <DemoForm client:load />
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-8 themed-border-section border-y transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <TrustBadges />
    </div>
  </section>

  <!-- Feature Cards -->
  <section class="py-20 themed-section transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14">
        <h2 class="text-3xl sm:text-4xl font-bold font-heading themed-h2 mb-4 transition-colors">
          On Your <span class="gradient-text">20 Minute</span> Demo
        </h2>
        <p class="themed-text text-lg max-w-2xl mx-auto transition-colors">
          We'll show you exactly how BestorantAI can transform your restaurant's marketing
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="themed-feature-card rounded-2xl p-6 hover:border-primary/30 transition-all duration-300 group hover:-translate-y-1">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="themed-h3 font-bold text-lg font-heading mb-2 transition-colors">AI Creatives</h3>
          <p class="themed-feature-desc text-sm leading-relaxed transition-colors">Auto-generated branded posters, ad copies, and captions tailored to your restaurant.</p>
        </div>

        <div class="themed-feature-card rounded-2xl p-6 hover:border-secondary/30 transition-all duration-300 group hover:-translate-y-1">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-secondary/20 to-secondary/5 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-secondary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5m.75-9l3-3 2.148 2.148A12.061 12.061 0 0116.5 7.605" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="themed-h3 font-bold text-lg font-heading mb-2 transition-colors">Ad Automation</h3>
          <p class="themed-feature-desc text-sm leading-relaxed transition-colors">Meta & Uber ads managed automatically with localized targeting and budget pacing.</p>
        </div>

        <div class="themed-feature-card rounded-2xl p-6 hover:border-accent/30 transition-all duration-300 group hover:-translate-y-1">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="themed-h3 font-bold text-lg font-heading mb-2 transition-colors">Auto-Scheduling</h3>
          <p class="themed-feature-desc text-sm leading-relaxed transition-colors">Set it and forget it. AI schedules posts and ads at optimal engagement times.</p>
        </div>

        <div class="themed-feature-card rounded-2xl p-6 hover:border-blue-400/30 transition-all duration-300 group hover:-translate-y-1">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-400/20 to-blue-400/5 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </div>
          <h3 class="themed-h3 font-bold text-lg font-heading mb-2 transition-colors">Real-Time Insights</h3>
          <p class="themed-feature-desc text-sm leading-relaxed transition-colors">Interactive dashboards with ROI tracking, reach metrics, and optimization triggers.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-20 themed-section transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Testimonial
        quote="BestorantAI completely changed how we run our marketing. We used to spend hours on Facebook ads with no idea if they worked. Now our AI creates everything automatically — and our walk-ins increased 40% in the first month."
        name="Rajesh Sharma"
        role="Owner"
        restaurant="Spice Garden"
      />
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 themed-cta-section relative overflow-hidden transition-colors duration-300">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] themed-cta-bg rounded-full blur-3xl transition-colors"></div>
    </div>
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
      <h2 class="text-3xl sm:text-4xl font-bold font-heading themed-h2 mb-4 transition-colors">
        Ready to <span class="gradient-text">Automate</span> Your Marketing?
      </h2>
      <p class="themed-text text-lg mb-8 max-w-xl mx-auto transition-colors">
        Join 500+ restaurants already saving time and growing revenue with AI-powered ad automation.
      </p>
      <a href="#demo-form" class="inline-block px-8 py-4 rounded-xl bg-gradient-to-r from-primary to-secondary text-white font-bold text-base shadow-2xl shadow-primary/30 hover:-translate-y-1 transition-transform">
        Book Your Free Demo →
      </a>
    </div>
  </section>

  <Footer />
</DemoLayout>
